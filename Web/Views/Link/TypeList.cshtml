    <title>图片类别列表</title>
</head>

<body>
    <div id="app">
        <div class="page-content clearfix">
            <div id="Member_Ratings">
                <div class="d_Confirm_Order_style">
                    <div class="clearfix" style="margin-top:20px">
                        <span class="l_f">
                            <a v-on:click="add" class="btn btn-warning"><i class="icon-plus"></i>添加图片类别</a>
                        </span>
                    </div>
                    <div class="table_menu_list">
                        <table class="table table-striped table-bordered table-hover" id="sample-table">
                            <thead>
                                <tr>
                                    <th width="30">编号</th>
                                    <th width="60">图片类别名</th>
                                    <th width="80">图片类别描述</th>
                                    <th width="50">状态</th>
                                    <th width="100">添加时间</th>
                                    <th width="200">操作</th>
                                </tr>
                            </thead>
                            <tbody v-for="type in linkTypes">
                                <tr>
                                    <td v-html="type.id"></td>
                                    <td v-html="type.name"></td>
                                    <td v-html="type.description"></td>
                                    <td class="td-status"><span class="label label-success radius" v-html="type.isEnabled?'正常':'已冻结'"></span></td>
                                    <td v-html="type.createTime"></td>
                                    <td class="td-manage">
                                        <a v-on:click="edit(type.id)" href="javascript:;" title="编辑图片类别" class="btn btn-xs btn-success">编辑图片类别</a>
                                        <a title="冻结" href="javascript:;" v-on:click="frozen(type.id,type.isEnabled)" class="btn btn-xs btn-warning" v-html="type.isEnabled?'冻结图片类别':'解冻图片类别'"></a>
                                        <a title="删除" href="javascript:;" v-on:click="del(type.id)" class="btn btn-xs btn-warning">删除图片类别</a>
                                        <a v-on:click="window.location.href='/admin/link/list?typeId='+type.id" title="查看图片列表" class="btn btn-xs btn-success">查看图片列表</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="page-bar">
                        <ul>
                            <li><a v-on:click="pages.cur=1,getpage()">首页</a></li>
                            <li v-if="pages.cur>1"><a v-on:click="pages.cur--,getpage()">上一页</a></li>
                            <li v-if="pages.cur==1"><a class="banclick">上一页</a></li>
                            <li v-for="index in indexs" v-bind:class="{'active':pages.cur==index}"><a v-on:click="pageclick(index)" v-html="index"></a></li>
                            <li v-if="pages.cur!=pages.all"><a v-on:click="pages.cur++,getpage()">下一页</a></li>
                            <li v-if="pages.cur==pages.all"><a class="banclick">下一页</a></li>
                            <li><a><input type='text' id='txtpage' style='width: 30px;height: 18px;' v-model="pages.txtpage" onkeyup="value=value.replace(/[^\d]/g,'')" /></a></li>
                            <li><a id='go' v-on:click="go">跳转</a></li>
                            <li><a v-on:click="pages.cur=pages.all,getpage()">尾页</a></li>
                            <li><a>共<i><font v-html="pages.all"></font></i>页</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--添加权限类别图层-->
        <div class="add_menber" id="add" style="display:none">
            <ul class="page-content">
                <li><label class="label_name">图片类别名：</label><span class="add_name"><input value="" placeholder="图片类别名" v-model="add_name" name="图片类别名" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">图片类别描述：</label><span class="add_name"><input value="" placeholder="图片类别描述" v-model="add_description" name="图片类别描述" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
            </ul>
        </div>
        <!--添加权限类别图层-->
        <div class="add_menber" id="edit" style="display:none">
            <ul class="page-content">
                <li><label class="label_name">图片类别名：</label><span class="add_name"><input value="" placeholder="图片类别名" v-model="editType.name" name="图片类别名" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">IdName描述：</label><span class="add_name"><input value="" placeholder="图片类别描述" v-model="editType.description" name="图片类别描述" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
            </ul>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    var startTime;
    var endTime;
    var vue = new Vue({
        el: "#app",
        data: {
            linkTypes: [],
            pages: {
                all: 1, cur: 1, txtpage: ""
            },
            editType: {
                name: "", description: ""
            },
            add_name: "", add_description: ""
        },
        methods: {
            getpage: function () {
                this.$http.post('/admin/link/typeList', { }, { emulateJSON: true }).then(function (result) {
                    this.linkTypes = result.data.data;
                })
            },
            pageclick: function (index) {//页码点击事件
                if (index != this.cur) {
                    this.pages.cur = index
                }
                this.getpage();
            },
            go: function () {
                if (this.pages.txtpage == "") {
                    return;
                }
                else {
                    this.pages.cur = this.pages.txtpage;
                }
                this.getpage();
            },
            add: function () {
                var that = this;
                add_name = "";
                add_description = "";
                add_sort = "";
                layer.open({
                    type: 1,
                    title: '添加图片类别',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['400px', ''],
                    content: $('#add'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        if (that.add_name == "") {
                            layer.alert('图片类别名不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        that.$http.post('/admin/link/addType', { name: that.add_name, description: that.add_description, sort: that.add_sort }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                        });
                    }
                });
            },
            edit: function (id) {
                var that = this;
                that.$http.post('/admin/link/getType', { id: id }, { emulateJSON: true }).then(function (result) {
                    if (result.data.status == 1) {
                        that.editType = result.data.data;
                    }
                    else if (result.data.status == 0) {
                        layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                    }
                    else if (result.data.status == 302) {
                        window.location.href = result.data.data;
                    }
                    else if (result.data.status == 401) {
                        layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                    }
                });
                layer.open({
                    type: 1,
                    title: '修改IdName类别',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['400px', ''],
                    content: $('#edit'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        if (that.editType.name == "") {
                            layer.alert('图片类别名不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        that.$http.post('/admin/link/editType', { id: id, name: that.editType.name, description: that.editType.description, sort: that.editType.sort }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                        });
                    }
                });
            },
            frozen: function (id, isenabled) {
                var that = this;
                var msg = '确认冻结图片类别吗？';
                var msg1 = '是否冻结图片类别';
                if (!isenabled) {
                    msg = '确认解冻图片类别吗？';
                    msg1 = '是否解冻图片类别';
                }
                layer.confirm(msg, { icon: 0, title: msg1 }, function () {
                    that.$http.post('/admin/link/frozenType', { id: id }, { emulateJSON: true }).then(function (result) {
                        if (result.data.status == 1) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            that.getpage();
                        }
                        else if (result.data.status == 0) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            //that.msg = result.data.msg;
                        }
                        else if (result.data.status == 302) {
                            window.location.href = result.data.data;
                        }
                        else if (result.data.status == 401) {
                            layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                        }
                    });
                });
            },
            del: function (id) {
                var that = this;
                layer.confirm("图片类别删除后无法恢复，确认删除吗？", { icon: 0, title: '是否删除图片类别' }, function (index) {
                    that.$http.post('/admin/link/delType', { id: id }, { emulateJSON: true }).then(function (result) {
                        if (result.data.status == 1) {
                            layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                            that.getpage();
                        }
                        else if (result.data.status == 0) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                        }
                        else if (result.data.status == 302) {
                            window.location.href = result.data.data;
                        }
                        else if (result.data.status == 401) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                        }
                    });
                });
            }
        },
        computed: {
            indexs: function () {
                var count = 0;
                var left = 1;
                var right = this.pages.all;
                var ar = [];
                if (this.pages.all >= 5) {
                    if (this.pages.cur > 3 && this.pages.cur < this.pages.all - 2) {
                        left = Number(this.pages.cur) - 2;
                        right = Number(this.pages.cur) + 2;
                    } else {
                        if (this.pages.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.pages.all
                            left = Number(this.pages.all) - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }
        },
        mounted: function () {
            this.$http.post('/admin/link/typeList', { }, { emulateJSON: true }).then(function (result) {
                this.linkTypes = result.data.data;
            })
        }
    });
</script>